---
export interface CardProps {
    icon: string;
    title: string;
    description: string;
    link: string;
}

const { icon, title, description, link } = Astro.props;
---

<div
    class="relative flex flex-col bg-white shadow-sm border border-light-500 rounded-lg w-4/5 md:h-72 lg:h-11/12 lg:h-full mt-6"
>
    <!-- Icon -->
    <div
        class="flex justify-center items-center py-4"
    >
        <img src={icon} alt="Card Icon" class="w-12 h-auto" />
    </div>

    <!-- Title -->
    <div
        class="flex justify-center items-center py-3"
    >
        <h5 class="text-lg font-bold text-transparent bg-clip-text bg-gradient-to-r from-[#1E74F3] to-[#8373F9] text-center">
            {title}
        </h5>
    </div>

    <!-- Description -->
    <div class="p-4 flex-1">
        <p class="text-neutral-500 text-sm leading-normal font-semibold text-center">
            {description}
        </p>
    </div>

    <!-- Optional Link -->
    {
        link && (
            <div class="border-t border-light-100 py-2">
                <a
                    href={link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-primary-500 hover:underline font-semibold text-center block"
                >
                    Ver m√°s
                </a>
            </div>
        )
    }
</div>
